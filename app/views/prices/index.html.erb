<h1>Listing prices</h1>

<table>
  <thead>
    <tr>
      <th>Projection</th>
      <th>Sport</th>
      <th>Date</th>
      <th>Position</th>
      <th>Team</th>
      <th>Player</th>
      <th>Salary</th>
      <th>Site</th>
      <th>Site</th>
      <th>Salary cap</th>
      <th>Format</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.projection_id %></td>
        <td><%= price.sport %></td>
        <td><%= price.date %></td>
        <td><%= price.position %></td>
        <td><%= price.team %></td>
        <td><%= price.player %></td>
        <td><%= price.salary %></td>
        <td><%= price.site %></td>
        <td><%= price.site_id %></td>
        <td><%= price.salary_cap %></td>
        <td><%= price.format %></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Price', new_price_path %>
